  <link rel="stylesheet" href="/css/admin.css">
  <link rel="shortcut icon" href="/images/ecodrive  Logo.png" type="image/x-icon">
  <title>Dashboard Admin</title>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      fetch('/api/candidates/count')
        .then(response => response.json())
        .then(data => {
          document.getElementById('candidateCount').innerText = data.count;
        })
        .catch(error => console.error('Error fetching candidate count:', error));

      fetch('/api/candidates/new')
        .then(response => response.json())
        .then(candidates => {
          const candidatesContainer = document.querySelector('.nouvcandidat tbody');
          candidatesContainer.innerHTML = ''; // Clear previous content

          candidates.forEach(candidate => {
            const row = document.createElement('tr');
            row.innerHTML = `
              <td width="60px">
                <div class="imgBx">
                  <img src="/images/user.png" alt="">
                </div>
              </td>
              <td>
                <h4>${candidate.prenom} <span>${candidate.nom}</span></h4>
              </td>
            `;
            candidatesContainer.appendChild(row);
          });
        })
        .catch(error => console.error('Error fetching new candidates:', error));
    });
  </script>
</head>

