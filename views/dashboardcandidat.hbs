<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="/css/dashboardcandidat.css">
  <link rel="shortcut icon" href="images/ecodrive  Logo.png" type="image/x-icon">
  <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css' rel='stylesheet' />
  <title>DashboardCandidat</title>
</head>

<body>
  <!-- Navigation -->
  <div class="container">
    <div class="navigation">
      <ul>
        <li>
          <a href="/Home">
            <span class="icon">
              <img src="images/ecodrive  Logo.png" class="h-16" alt="EcoDrive Logo">
            </span>
            <span class="title">EcoDrive</span>
          </a>
        </li>

        <li>
          <a href="dashboard">
            <span class="icon">
              <ion-icon name="home-outline"></ion-icon>
            </span>
            <span class="title">Dashboard</span>
          </a>
        </li>

        <li>
          <a href="progression">
            <span class="icon">
              <ion-icon name="trending-up-outline"></ion-icon>
            </span>
            <span class="title">Progression</span>
          </a>
        </li>

        <li>
          <a href="Paiement">
            <span class="icon">
              <ion-icon name="cash-outline"></ion-icon>
            </span>
            <span class="title">Paiement </span>
          </a>
        </li>
        <li>
          <a href="calendrier">
            <span class="icon">
              <ion-icon name="calendar-outline"></ion-icon>
            </span>
            <span class="title">Calendrier</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <!-- Main -->
  <div class="main">
    <div class="topbar">
      <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
      </div>
      <div class="search">
        <label>
          <input type="text" placeholder="Search ...">
          <ion-icon name="search-outline"></ion-icon>
        </label>
      </div>
      <div class="user" id="userDropdown">
        <img src="/images/user.png" alt="">
        <div class="dropdown-content">
          <a href="profil"><ion-icon name="person-circle-outline"></ion-icon> Profile</a>
          <a href="setting"> <ion-icon name="settings-outline"></ion-icon> Settings</a>
          <a href="connexion"><ion-icon name="log-out-outline"></ion-icon>déconnection</a>
        </div>
      </div>
    </div>

    <div class="cardBox cardGrid">
  <div class="card">
    <div>
      <div class="numbers">1,500</div>
      <div class="cardName">Daily Views</div>
    </div>
    <div class="iconBx">
      <ion-icon name="eye-outline"></ion-icon>
    </div>
  </div>

  <div class="card">
    <div>
      <div class="numbers">3/20</div>
      <div class="cardName">Lecon de Code</div>
    </div>
    <div class="iconBx">
      <ion-icon name="document-outline"></ion-icon>
    </div>
  </div>

  <div class="card">
    <div>
      <div class="numbers">8/20</div>
      <div class="cardName">Lecon de Conduite</div>
    </div>
    <div class="iconBx">
      <ion-icon name="car-sport-outline"></ion-icon>
    </div>
  </div>
</div>
    <div class="content">
      <!-- Calendrier -->
      <div class="calendar-container">
        <div id="calendar"></div>
      </div>
      <!-- Chart -->
      <div class="chart-container">
        <canvas id="progressionChart"></canvas>
      </div>
    </div>
  </div>
  <!-- FullCalendar script -->
  <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js'></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: [
          // Ajouter des événements ici
        ]
      });
      calendar.render();
    });
  </script>

  <!-- Chart.js script -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    var ctx = document.getElementById('progressionChart').getContext('2d');
    var progressionChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Janvier', 'Fevrier', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Spetembre','Octobre','Novembre','Decembre'],
        datasets: [{
          label: 'Leçon de Code',
          data: [3, 5, 7, 10, 13, 15, 18],
          borderColor: 'rgba(75, 192, 192, 1)',
          backgroundColor: 'rgba(75, 192, 192, 0.2)'
        }, {
          label: 'Leçon de Conduite',
          data: [2, 4, 6, 9, 12, 14, 20],
          borderColor: 'rgba(153, 102, 255, 1)',
          backgroundColor: 'rgba(153, 102, 255, 0.2)'
        }]
      },
      options: {
        responsive: true,
        scales: {
          x: {
            beginAtZero: true
          },
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>

<!-- script -->
  <script src="/js/admin.js"></script>
  <!-- ionic icons -->
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

  </body>
</html>
 
