<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="/css/dashboardcandidat.css">
  <link rel="stylesheet" href="/css/instructeur.css">
  <link rel="shortcut icon" href="images/ecodrive  Logo.png" type="image/x-icon">
  <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css' rel='stylesheet' />
  <title>Dashboard instructeur</title>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      fetch('/api/candidates/count')
        .then(response => response.json())
        .then(data => {
          document.getElementById('candidateCount').innerText = data.count;
        })
        .catch(error => console.error('Error fetching candidate count:', error));
    });
  </script>

</head>

<body>
  <!-- Navigation -->
  <div class="container">
    <div class="navigation">
      <ul>
        <li>
          <a href="/Home">
            <span class="icon">
              <img src="images/ecodrive  Logo.png" class="h-16" alt="EcoDrive Logo">
            </span>
            <span class="title">EcoDrive</span>
          </a>
        </li>

        <li>
          <a href="dashboardInstricteur">
            <span class="icon">
              <ion-icon name="home-outline"></ion-icon>
            </span>
            <span class="title">Dashboard</span>
          </a>
        </li>

        <li>
          <a href="calendrierInstricteur">
            <span class="icon">
              <ion-icon name="calendar-outline"></ion-icon>
            </span>
            <span class="title">Calendrier</span>
          </a>
        </li>

        <li>
          <a href="progressionInstricteur">
            <span class="icon">
              <ion-icon name="calendar-outline"></ion-icon>
            </span>
            <span class="title">Progression</span>
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Main -->
  <div class="main">
    <div class="topbar">
      <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
      </div>
      <div class="search">
        <label>
          <input type="text" placeholder="Search ...">
          <ion-icon name="search-outline"></ion-icon>
        </label>
      </div>
      <div class="user" id="userDropdown">
        <img src="/images/user.png" alt="">
        <div class="dropdown-content">
          <a href="profil"><ion-icon name="person-circle-outline"></ion-icon> Profile</a>
          <a href="setting"> <ion-icon name="settings-outline"></ion-icon> Settings</a>
          <a href="instricteur"><ion-icon name="log-out-outline"></ion-icon>déconnection</a>
        </div>
      </div>
    </div>
    
    <div class="cardBox">
      <div class="card">
        <div>
          <div class="numbers">1,500</div>
          <div class="cardName">Daily Views</div>
        </div>
        <div class="iconBx">
          <ion-icon name="eye-outline"></ion-icon>
        </div>
      </div>
      
      <div class="card">
        <div>
          <div class="numbers" id="candidateCount">0</div>
          <div class="cardName">Candidats</div>
        </div>
        <div class="iconBx">
          <ion-icon name="people-outline"></ion-icon>
        </div>
      </div>
      
      <div class="card">
        <div>
          <div class="numbers">5/20</div>
          <div class="cardName">Lecon de Code</div>
        </div>
        <div class="iconBx">
          <ion-icon name="cash-outline"></ion-icon>
        </div>
      </div>
      
      <div class="card">
        <div>
          <div class="numbers">5/30</div>
          <div class="cardName">Lecon de conduite</div>
        </div>
        <div class="iconBx">
          <ion-icon name="cash-outline"></ion-icon>
        </div>
      </div>
    </div>
    
    <div class="calendar-container">
      <div id="calendar"></div>
    </div>
  </div>
  <!-- FullCalendar script -->
  <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js'></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: [
          // Ajoutez des événements ici
        ]
      });
      calendar.render();
    });
  </script>

  <!-- script -->
  <script src="/js/admin.js"></script>
  <script src="/js/candidat.js"></script>

  <!-- ionic icons -->
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>

</html>
