    <!-- Nouveaux Vehicules -->
    <div class="nouvcandidat">
      <div class="cardHeader">
        <h2>Vehicules</h2>
        <button id="openModalBtn">Ajouter Véhicule</button>
      </div>
      <table id="vehiculesTable">
        <thead>
          <tr>
            <th onclick="sortTable(0)"> Id <span class="icon-arrow">&UpArrow;</span></th>
            <th onclick="sortTable(1)"> Marque <span class="icon-arrow">&UpArrow;</span></th>
            <th onclick="sortTable(2)"> Modèle <span class="icon-arrow">&UpArrow;</span></th>
            <th onclick="sortTable(3)"> Disponibilité <span class="icon-arrow">&UpArrow;</span></th>
