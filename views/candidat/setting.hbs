<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings</title>
  <link rel="shortcut icon" href="images/ecodrive  Logo.png" type="image/x-icon">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="/css/dashboardcandidat.css">
  <link rel="stylesheet" href="/css/setting.css">
</head>
<body class="bg-gray-100 light-mode">
  <div class="container">
    <div class="navigation">
      <ul>
        <li>
          <a href="/">
            <span class="icon">
              <img src="images/ecodrive  Logo.png" class="h-16" alt="EcoDrive Logo">
            </span>
            <span class="title">EcoDrive</span>
          </a>
        </li>
        <li>
          <a href="/dashboard">
            <span class="icon">
              <ion-icon name="home-outline"></ion-icon>
            </span>
            <span class="title">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="progression">
            <span class="icon">
              <ion-icon name="trending-up-outline"></ion-icon>

            </span>
            <span class="title">Progression</span>
          </a>
        </li>
        <li>
          <a href="/Paiement">
            <span class="icon">
              <ion-icon name="cash-outline"></ion-icon>
            </span>
            <span class="title">Paiement</span>
          </a>
        </li>
        <li>
          <a href="/calendrier">
            <span class="icon">
              <ion-icon name="calendar-outline"></ion-icon>
            </span>
            <span class="title">Calendrier</span>
          </a>
        </li>
        <li>
          <a href="/setting">
            <span class="icon">
              <ion-icon name="settings-outline"></ion-icon>
            </span>
            <span class="title">Settings</span>
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Main -->
  <div class="main">
    <div class="topbar">
      <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
      </div>
      <div class="search">
        <label>
          <input type="text" placeholder="Search ...">
          <ion-icon name="search-outline"></ion-icon>
        </label>
      </div>
      <div class="user" id="userDropdown">
        <img src="/images/user.png" alt="">
        <div class="dropdown-content bg-white shadow-md rounded-md">
          <a href="profil"><ion-icon name="person-circle-outline"></ion-icon> Profile</a>
          <a href="setting"> <ion-icon name="settings-outline"></ion-icon> Settings</a>
          <a href="connexion"><ion-icon name="log-out-outline"></ion-icon>déconnection</a>
        </div>
      </div>
    </div>

    <!-- Settings Section -->
    <div class="settings-content">
      <h1>Settings</h1>
      <form action="#" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter your username">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password">
        </div>
        <div class="form-group">
          <label for="language">Language</label>
          <select id="language" name="language">
            <option value="en">English</option>
            <option value="fr">French</option>
            <option value="es">Spanish</option>
          </select>
        </div>
        <div class="form-group">
          <label for="theme">Theme</label>
          <select id="theme" name="theme" onchange="toggleTheme(this.value)">
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </div>
        <button type="submit" class="btn-save">Save Settings</button>
      </form>
    </div>

    <!-- Footer -->
    <footer>
      <div class="footer-content">
        <p>Copyright © 2024 EcoDrive. Tous droits réservés.</p>
      </div>
    </footer>
  </div>

  <!-- script -->
  <script src="/js/admin.js"></script>
  <script src="/js/candidat.js"></script>
  <script src="/js/setting.js"></script>
  <!-- ionic icons -->
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
