  <link rel="stylesheet" href="/css/paiement.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="/css/calendrier.css">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
</head>

<body>
  <div class="container">
    <div class="navigation">
      <ul>
        <li>
          <a href="/">
            <span class="icon">
              <img src="images/ecodrive  Logo.png" class="h-16" alt="EcoDrive Logo">
            </span>
            <span class="title">EcoDrive</span>
          </a>
        </li>
        <li>
          <a href="dashboard">
            <span class="icon">
              <ion-icon name="home-outline"></ion-icon>
            </span>
            <span class="title">Dashboard</span>
          </a>
        </li>

      <li>
          <a href="progression">
            <span class="icon">
              <ion-icon name="trending-up-outline"></ion-icon>

            </span>
            <span class="title">Progression</span>
          </a>
        </li>

        <li>
          <a href="#">
            <span class="icon">
              <ion-icon name="cash-outline"></ion-icon>
            </span>
            <span class="title">Paiement </span>
          </a>
        </li>
        <li>
          <a href="calendrier">
            <span class="icon">
              <ion-icon name="calendar-outline"></ion-icon>
            </span>
            <span class="title">Calendrier</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <!-- Main -->
  <div class="main">
    <div class="topbar">
      <div class="toggle">
        <ion-icon name="menu-outline"></ion-icon>
      </div>
      <div class="search">
        <label>
          <input type="text" placeholder="Search ...">
          <ion-icon name="search-outline"></ion-icon>
        </label>
      </div>
      <div class="user" id="userDropdown">
        <img src="/images/user.png" alt="">
        <div class="dropdown-content">
          <a href="profil"><ion-icon name="person-circle-outline"></ion-icon> Profile</a>
          <a href="setting"> <ion-icon name="settings-outline"></ion-icon> Settings</a>
          <a href="connexion"><ion-icon name="log-out-outline"></ion-icon>déconnection</a>
        </div>
    </div>
  </div>

  <br>
  <br>

  <div class="wrapper">
    <h2>Paiement Form</h2>
    <form action="" method="post">
      <!--Account Information Start-->
      <h4>Account</h4>
      <div class="input_group">
        <div class="input_box">
          <input type="text" placeholder="Nom et prénom" required class="name">
          <i class="fa fa-user icon"></i>
        </div>
        <div class="input_box">
          <input type="text" placeholder="Nom sur la carte" required class="name">
          <i class="fa fa-user icon"></i>
        </div>
      </div>
      <div class="input_group">
        <div class="input_box">
          <input type="email" placeholder="Email Address" required class="name">
          <i class="fa fa-envelope icon"></i>
        </div>
      </div>
      <div class="input_group">
        <div class="input_box">
          <input type="text" placeholder="Address" required class="name">
          <i class="fa fa-map-marker icon" aria-hidden="true"></i>
        </div>
      </div>
      <div class="input_group">
        <div class="input_box">
          <input type="text" placeholder="City" required class="name">
          <i class="fa fa-institution icon"></i>
        </div>
      </div>
      <!--Account Information End-->


      <!--DOB & Gender Start-->
      <div class="input_group">
        <div class="input_box">
          <h4>Date de Naissance</h4>
          <input type="text" placeholder="DD" required class="dob">
          <input type="text" placeholder="MM" required class="dob">
          <input type="text" placeholder="YYYY" required class="dob">
        </div>
        <div class="input_box">
          <h4>Genre</h4>
          <input type="radio" name="gender" class="radio" id="b1" checked>
          <label for="b1">Hommme</label>
          <input type="radio" name="gender" class="radio" id="b2">
          <label for="b2">Femme</label>
        </div>
      </div>
      <!--informations et Genre End-->


      <!--Paiement Details Start-->
      <div class="input_group">
        <div class="input_box">
          <h4>Paiement Détails</h4>
          <input type="radio" name="pay" class="radio" id="bc1" checked>
          <label for="bc1"><span>
              <i class="fa fa-cc-visa"></i> Credit Card</span></label>
          <input type="radio" name="pay" class="radio" id="bc2">
          <label for="bc2"><span>
              <i class="fa fa-cc-paypal"></i> Paypal</span></label>
        </div>
      </div>
      <div class="input_group">
        <div class="input_box">
          <input type="tel" name="" class="name" placeholder="Numéro de Carte 1111-2222-3333-4444" required>
          <i class="fa fa-credit-card icon"></i>
        </div>
      </div>
      <div class="input_group">
        <div class="input_box">
          <input type="tel" name="" class="name" placeholder="Card CVC 632" required>
          <i class="fa fa-user icon"></i>
        </div>
      </div>
      <div class="input_group">
        <div class="input_box">
          <div class="input_box">
            <input type="number" placeholder="Exp Month" required class="name">
            <i class="fa fa-calendar icon" aria-hidden="true"></i>
          </div>
        </div>
        <div class="input_box">
          <input type="number" placeholder="Exp Year" required class="name">
          <i class="fa fa-calendar-o icon" aria-hidden="true"></i>
        </div>
      </div>
      <div class="input_box">
        <input type="number" placeholder="Entrer le montant" required class="name">
        <i class="fa fa-money icon" aria-hidden="true"></i>
      </div>
      <!--Payment Details End-->

      <div class="input_group">
        <div class="input_box">
          <button type="submit">Confirm Paiement </button>
        </div>
      </div>
    </form>
  </div>

  <!--Script -->
  <script src="/js/paiement.js"></script>
  <script src="/js/admin.js"></script>
  <!-- ionic icons -->
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

  <footer>
    <div class="footer-content">
      <p>Copyright © 2024 EcoDrive. Tous droits réservés.</p>
    </div>
  </footer>

</body>

</html>
